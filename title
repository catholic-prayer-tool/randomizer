<body>
  <h1>Catholic Prayer, Verse & Quote Randomizer</h1>
  <div id="display">Click "New Prayer/Quote" to begin!</div>
  <button onclick="showRandomItem()">New Prayer/Quote</button>

  <script>
    const items = [
      "COME HOLY SPIRIT",
      "THY WILL BE DONE.",
      "MY GOD AND MY ALL.",
      "Lord, I am not worthy",
      "O HEART OF JESUS, ALL FOR THEE.",
      "O GOD, HAVE MERCY ON ME, A SINNER.",
      "Blessed be the Name of the Lord",
      // ... (add all your other prayers/quotes/verses here)
      "\"I can do all things through Christ who strengthens me.\" — Philippians 4:13",
      "\"Pray, hope, and don't worry.\" — St. Padre Pio"
    ];

    function showRandomItem() {
      const index = Math.floor(Math.random() * items.length);
      document.getElementById('display').textContent = items[index];
    }
  </script>
